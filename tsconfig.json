{
  "compilerOptions": {
    "jsx": "react-jsx", // Поддержка JSX для React
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*", "src/scenes/AboutScene.ts", "src/scenes/ContactScene.ts", "src/scenes/HomeScene.ts", "src/components/FluidAnimationComponent.tsx", "src/components/textLogo.ts"],
  "exclude": ["node_modules"]
}
